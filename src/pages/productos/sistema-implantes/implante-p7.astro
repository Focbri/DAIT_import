---
// Page1.astro
import Layout from "../../../layouts/Layout.astro";
import ImplanteSeccion from "../../productos/sistema-implantes/ImplanteSeccion.astro"
import p7 from "../../../assets/Productos/implantes/P7_rotating.gif";
import bannerLogo from "../../../assets/Productos/implantes/implante_logos_banner_4.png";

const title = "P7";
const subtitle = "Implante";
const description = "La saciedad inicial de P7 con su preservación ósea superior crea resultados exitosos.";
const features = [
    "– Alivio de estrés – Estabilidad cortical superior",
    "– Paso medio",
    "– Colector óseo",
    "– Conexión cónica",
    "– Microanillos",
    "– Ápice seguro",
    "– Plataforma cónica",
    "– Material de titanio de grado 5",
    "– Superficie: SBTC – Recubrimiento trabecular bioactivo inteligente",
];

const fichaLink = "/productos/sistema-implantes/p5d-ficha";
const cotizarLink = "/productos/sistema-implantes/p5d-cotizacion";
---

<Layout title="Implante P7 - Sistema de Implantes">
    <ImplanteSeccion
        title={title}
        subtitle={subtitle}
        imageSrc={p7.src}
        bannerImage={bannerLogo.src}
        description={description}
        features={features}
        fichaLink={fichaLink}
        cotizarLink={cotizarLink}
    />
</Layout>
