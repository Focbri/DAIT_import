---
import ctgCorneal from "../assets/Productos/cornea.png";
import ctgcuchillosSeguridad from "../assets/Productos/cuchillos_seguridad.png";
import ctgcuchillosHojas from "../assets/Productos/cuchillos_hojas.png";
import ctgrefractivo from "../assets/Productos/refractivo.png";
import ctgvitreoretinal from "../assets/Productos/vitreoretinal.png";
import ctgoculoplasia from "../assets/Productos/oculoplasia.png";
import ctgaccesorios from "../assets/Productos/accesorios.png";
import ctgcanulas from "../assets/Productos/canulas.png";
import ctgotorrinolaringologia from "../assets/Productos/otorrinolaringologia.png";
import ctgquirurgico from "../assets/Productos/quirurgico.png";
import ctgdental from "../assets/Productos/dental.png";

const productos = [
  { nombre: "Córnea", imagen: ctgCorneal },
  { nombre: "Dental", imagen: ctgdental },
  { nombre: "Cuchillos y Hojas", imagen: ctgcuchillosHojas },
  { nombre: "Refractivo", imagen: ctgrefractivo },
  { nombre: "Vítreorretinal", imagen: ctgvitreoretinal },
  { nombre: "Oculoplasia", imagen: ctgoculoplasia },
  { nombre: "Accesorios", imagen: ctgaccesorios },
  { nombre: "Cánulas", imagen: ctgcanulas },
  { nombre: "Otorrinolaringología", imagen: ctgotorrinolaringologia },
  { nombre: "Quirúrgico", imagen: ctgquirurgico },
  { nombre: "Cuchillos de Seguridad", imagen: ctgcuchillosSeguridad },
];
---

<section id="ctg-productos" class="w-full flex flex-col gap-6 bg-[#000] mt-14 py-4">
  <div class="w-full text-[#fff] flex justify-center">
    <h2 class="text-4xl border-b-2 border-[#282828] w-[90%] lg:w-[84%] text-center">Nuestros Productos</h2>
  </div>
  
  <div class="w-full lg:gap-4 gap-3 flex justify-center flex-wrap text-[#000] text-lg">
    {productos.map((producto) => (
      <a href="/" class="flex flex-col items-center border border-[#282828] lg:w-[20%] w-[45%] rounded-[4px] overflow-hidden">
        <div class="bg-[#ff6a02] w-full text-center py-1">
          <h3>{producto.nombre}</h3>
        </div>
        <div class="w-full bg-[#fff] flex justify-center hover:bg-[#ff6a02] hover:opacity-85 transition-colors duration-300">
          <img src={producto.imagen.src} alt={producto.nombre} class="w-full" />
        </div>
      </a>
    ))}
  </div>
</section>